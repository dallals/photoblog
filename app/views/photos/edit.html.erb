<%= render 'shared/errors', obj: @photo %>



<div class="row">
	<div class="col-xs-12">
		<%= form_for @photo do |f| %>
			<div class="control-label col-sm-2 ">
				<%= f.label :image %>
				<%=f.file_field :image %>
			</div><br>
		
		<div class="form group">
			<div class="col-sm-8">
				<%= f.text_field :title, class: "form-control", placeholder: "Title of photo"%>
			</div>
		
		<div class="form group">
			<div class="col-xs-2">
				<%= f.submit 'Update', class: 'btn btn-primary'%> 
				<%= link_to "Show User Photos", edit_photo_path(@photo), class: "btn btn-sm btn-success"%>
			</div> 
		</div>		
		<% end %>
	</div>
</div>	