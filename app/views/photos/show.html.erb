

<h1 align="Center">Photos that <%= @user.name %> posted</h1>

<div class="row">
	<div class="col-md-4 col-md-offset-4 center">
	
	</div>
</div>	


<div class="center">
	<div align="center">
		<%= will_paginate %>
			<% @photos.each do | photo | %>
				<div class="media-left">
					<h4><%= photo.title %></h4>
		    		<%= link_to image_tag(photo.image.url(:thumb), class: 'media-object'), photo.image.url, target: '_blank' %>
		    		<p>Photo by: <%= photo.user.name %></p>
		    		<% if logged_in? && (current_user == photo.user || current_user.admin?) %>

		    			<%= link_to "edit this photo", edit_photo_path(photo), class: "btn btn-xs btn-primary" %>
			 			<%= link_to 'Delete', photo_path(photo), class: 'btn btn-xs btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %>
					<% end %> 
		  		</div>

			<% end %>
		<%= will_paginate %>
	</div>		
</div>	



<div class="center">

</div>
