<%= render 'shared/errors', obj: @user %>

<div class="row">
	<div class="col-xs-12">
		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="control-label col-sm-2">	
					<%= f.label :name %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :name, class: "form-control", placeholder: "User Name", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">	
					<%= f.label :email %>
				</div>
				<div class="col-sm-8">	
					<%= f.email_field :email, rows: 10, class: "form-control", placeholder: "Enter Email" %>
				</div>	
			</div>
			<div class="form-group">	
				<div class="control-label col-sm-2">	
					<%= f.label :password %>
				</div>
				<div class="col-sm-8">
					<%= f.password_field :password, class: "form-control", placeholder: "Password" %>
				</div>
			</div>	
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit(@user.new_record? ? "Sign Up" : "Update account", class: 'btn btn-danger btn active')%>
				</div>
			</div>		
			
		<% end %>
		<div class="col-xs-4 col-xs-offset-4">
			<%= link_to "Cancel request and return to articles", articles_path %>
		</div>	
	</div>
</div> 