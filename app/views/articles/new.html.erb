<h1 align="center">Create a New Post</h1>

<%= render 'form' %>

<div class="page-header"><h3>Upload Photo</h3></div>
<%= render 'shared/errors', obj: @photo %>
<div class="row">
	<div class="col-xs-12">
		<%= form_for @photo do |f| %>
			<div class="control-label col-sm-2 ">
				<%= f.label :image %>
				<%=f.file_field :image %>
			</div>
		
		<div class="form-group">
			<div class="col-sm-8">
				<%= f.text_field :title, class: "form-control", placeholder: "Title of photo"%>
			</div>
		
		<div class="form-group">
			<div class="col-xs-2">
				<%= f.submit 'Upload', class: 'btn btn-primary'%> 
				<%= link_to "Show User Photos", photos_path, class: "btn btn-sm btn-success"%>
			</div> 
		</div>		
		<% end %>
	</div>
</div>	




